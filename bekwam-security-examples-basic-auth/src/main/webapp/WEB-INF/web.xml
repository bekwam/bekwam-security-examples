<?xml version="1.0"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <module-name>bekwam-security-examples-basic-auth</module-name>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected page</web-resource-name>
            <url-pattern>/api/protected</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>user</role-name>
    </security-role>
    <login-config>
        <auth-method>BASIC</auth-method>
        <!--
        In this config, realm-name is purely informational.  If you hit a protected
        URL in the browser, the dialog will say some thing like "This site says
        '<< web.xml's realm name >>'
        -->
        <realm-name>Bekwam Basic Auth Demo</realm-name>
    </login-config>
</web-app>